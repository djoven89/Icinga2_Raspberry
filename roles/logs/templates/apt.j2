/var/log/apt/term.log {
  weekly
  rotate {{ logs_rotation_weekly }}
  maxsize {{ logs_max_size }}
  nomissingok
  notifempty
  olddir {{ logs_rotated_dir }}/packages/
  createolddir 0640 root root

  compress
  delaycompress
  dateext
  dateyesterday
}

/var/log/apt/history.log {
  weekly
  rotate {{ logs_rotation_daily }}
  maxsize {{ logs_max_size }}
  nomissingok
  notifempty
  olddir {{ logs_rotated_dir }}/packages/
  createolddir 0640 root root

  compress
  delaycompress
  dateext
  dateyesterday
}
